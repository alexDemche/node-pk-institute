            <input type="email" id="email" name="email" class="form-control" placeholder="Введiть Email"
              value="<%= typeof email != 'undefined' ? email : '' %>" />
          </div>
          <div class="form-group">
            <label for="password">Пароль</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Створiть Пароль"
